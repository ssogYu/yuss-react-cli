{
    "compileOnSave": true,
    "compilerOptions": {
        "target":"ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "build",
        "lib": ["ESNext"],
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}